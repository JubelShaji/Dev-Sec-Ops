pipeline {
  agent none

  environment {
    REGISTRY = 'jubelshaji'
    IMAGE    = 'simple_vote_app'
    TAG      = "${BUILD_NUMBER}"
  }

  stages {

    stage('Checkout Source') {
      agent { kubernetes { yaml gitPod() } }
      steps {
        container('git') {
            echo "ðŸ“¦ Checking out source code..."
            git branch: 'main', url: 'https://github.com/JubelShaji/Dev-Sec-Ops.git'
            }
        }
    }

    stage('Build Images') {
      parallel {

        stage('Build Vote') {
          agent { kubernetes { yaml kanikoPod() } }
          steps {
            container('kaniko') {
              sh """
                /kaniko/executor \
                --context=git://github.com/JubelShaji/Dev-Sec-Ops.git#refs/heads/main \
                --dockerfile=Voting-App/vote/Dockerfile \
                --destination=${REGISTRY}/${IMAGE}:vote-${TAG} \
                --destination=${REGISTRY}/${IMAGE}:vote-latest \
                --cache=true \
                --cache-repo=${REGISTRY}/${IMAGE}/cache
              """
            }
          }
        }

        stage('Build Seed') {
          agent { kubernetes { yaml kanikoPod() } }
          steps {
            container('kaniko') {
              sh """
              /kaniko/executor \
                --context=git://github.com/JubelShaji/Dev-Sec-Ops.git#refs/heads/main \
                --dockerfile=Voting-App/seed/Dockerfile \
                --destination=${REGISTRY}/${IMAGE}:seed-${TAG} \
                --destination=${REGISTRY}/${IMAGE}:seed-latest \
                --cache=true \
                --cache-repo=${REGISTRY}/${IMAGE}/cache
              """
            }
          }
        }

        stage('Build Worker') {
          agent { kubernetes { yaml kanikoPod() } }
          steps {
            container('kaniko') {
              sh """
              /kaniko/executor \
                --context=git://github.com/JubelShaji/Dev-Sec-Ops.git#refs/heads/main \
                --dockerfile=Voting-App/worker/Dockerfile \
                --destination=${REGISTRY}/${IMAGE}:worker-${TAG} \
                --destination=${REGISTRY}/${IMAGE}:worker-latest \
                --cache=true \
                --cache-repo=${REGISTRY}/${IMAGE}/cache
              """
            }
          }
        }

        stage('Build Result') {
          agent { kubernetes { yaml kanikoPod() } }
          steps {
            container('kaniko') {
              sh """
              /kaniko/executor \
                --context=git://github.com/JubelShaji/Dev-Sec-Ops.git#refs/heads/main \
                --dockerfile=Voting-App/result/Dockerfile \
                --destination=${REGISTRY}/${IMAGE}:result-${TAG} \
                --destination=${REGISTRY}/${IMAGE}:result-latest \
                --cache=true \
                --cache-repo=${REGISTRY}/${IMAGE}/cache
              """
            }
          }
        }

      }
    }

    stage('Trivy Scan Images') {
      parallel {

        stage('Scan Vote') {
          agent { kubernetes { yaml trivyPod() } }
          steps {
            container('trivy') {
              sh """
              trivy image --exit-code 0 --format json --output trivy-vote.json ${REGISTRY}/${IMAGE}:vote-${TAG}
              trivy image --exit-code 0 --format template --template '@contrib/html.tpl' --output trivy-vote.html ${REGISTRY}/${IMAGE}:vote-${TAG}
              """
            }
            archiveArtifacts artifacts: 'trivy-vote.*', onlyIfSuccessful: false
          }
        }

        stage('Scan Seed') {
          agent { kubernetes { yaml trivyPod() } }
          steps {
            container('trivy') {
              sh """
              trivy image --exit-code 0 --format json --output trivy-seed.json ${REGISTRY}/${IMAGE}:seed-${TAG}
              trivy image --exit-code 0 --format template --template '@contrib/html.tpl' --output trivy-seed.html ${REGISTRY}/${IMAGE}:seed-${TAG}
              """
            }
            archiveArtifacts artifacts: 'trivy-seed.*', onlyIfSuccessful: false
          }
        }

        stage('Scan Worker') {
          agent { kubernetes { yaml trivyPod() } }
          steps {
            container('trivy') {
              sh """
              trivy image --exit-code 0 --format json --output trivy-worker.json ${REGISTRY}/${IMAGE}:worker-${TAG}
              trivy image --exit-code 0 --format template --template '@contrib/html.tpl' --output trivy-worker.html ${REGISTRY}/${IMAGE}:worker-${TAG}
              """
            }
            archiveArtifacts artifacts: 'trivy-worker.*', onlyIfSuccessful: false
          }
        }

        stage('Scan Result') {
          agent { kubernetes { yaml trivyPod() } }
          steps {
            container('trivy') {
              sh """
              trivy image --exit-code 0 --format json --output trivy-result.json ${REGISTRY}/${IMAGE}:result-${TAG}
              trivy image --exit-code 0 --format template --template '@contrib/html.tpl' --output trivy-result.html ${REGISTRY}/${IMAGE}:result-${TAG}
              """
            }
            archiveArtifacts artifacts: 'trivy-result.*', onlyIfSuccessful: false
          }
        }

      }
    }

    stage('Deploy to Kubernetes') {
      agent { kubernetes { yaml kubectlPod() } }
      steps {
        container('kubectl') {
          sh """
          sed -i 's/:vote-latest/:vote-${TAG}/g' ${WORKSPACE}/Kubernetes/deployment/vote-deployment.yaml
          sed -i 's/:worker-latest/:worker-${TAG}/g' ${WORKSPACE}/Kubernetes/deployment/worker-deployment.yaml
          sed -i 's/:result-latest/:result-${TAG}/g' ${WORKSPACE}/Kubernetes/deployment/result-deployment.yaml

          kubectl apply -f ${WORKSPACE}/Kubernetes/deployment/
          """
        }
      }
    }

  }

  post {
    always {
      echo 'ðŸ“¦ Trivy reports archived'
    }
    success {
      echo 'ðŸŽ‰ Pipeline completed successfully'
    }
  }
}

/* =====================================================
   POD TEMPLATES
   ===================================================== */

def gitPod() {
"""
apiVersion: v1
kind: Pod
spec:
  serviceAccountName: jenkins
  containers:
    - name: git
      image: alpine/git:latest
      command: ['cat']
      tty: true
"""
}

def kanikoPod() {
  """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: kaniko
    image: gcr.io/kaniko-project/executor:debug
    command: ['sleep','infinity']
    volumeMounts:
    - name: regcred
      mountPath: /kaniko/.docker
  volumes:
  - name: regcred
    secret:
      secretName: regcred
"""
}

def trivyPod() {
  """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: trivy
    image: aquasec/trivy:latest
    command: ['sleep','infinity']
"""
}

def kubectlPod() {
  """
apiVersion: v1
kind: Pod
spec:
  serviceAccountName: jenkins
  containers:
  - name: kubectl
    image: bitnami/kubectl:latest
    command: ['sleep','infinity']
"""
}
